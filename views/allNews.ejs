<% layout("/layouts/boilerplate") -%>
<body>
  <div class="container py-5">

    <% if (currUser && currUser.preferences && currUser.preferences.length > 0) { %>
      <div class="query-container glass-effect text-center mb-4">
        <h2 class="query-title mb-3">Your Personalized News Feed</h2>
        <div class="d-flex flex-wrap justify-content-center gap-2">
          <% currUser.preferences.forEach(topic => { %>
            <span class="query-badge badge bg-primary text-white px-3 py-2 rounded-pill">
              <%= topic.trim() %>
            </span>
          <% }); %>
        </div>
      </div>
    <% } else { %>
      <div class="query-container styled-query text-center mb-4">
  <h2 class="query-title animated-underline">
    <%= searchQuery ? searchQuery.toUpperCase() : "INDIA" %>
  </h2>
</div>

    <% } %>

    <div class="row g-4">
      <% for (data of newsData) { %>
        <div class="col-12 col-sm-6 col-md-4">
          <div class="card h-100 shadow-lg border-0 rounded-4 news-card">
            <div class="position-relative">
              <a href="/<%= data._id %>">
                <div class="image-container">
                  <img 
                    src="<%= data.urlToImage %>" 
                    class="card-img-top img-fluid news-image" 
                    alt="News Image" loading="lazy">
                  <div class="image-overlay"></div>
                </div>
              </a>
              <a href="/bookmarks/<%= data._id %>"> 
                <i class="fa-regular fa-bookmark bookmark-icon"></i>
              </a>
            </div>

            <div class="card-body d-flex flex-column flex-grow-1">
              <h5 class="card-title text-truncate" title="<%= data.title %>">
                <%= data.title %>
              </h5>
              <p class="card-text overflow-hidden" style="max-height: 4.5em;">
                <%= data.description %>
              </p>
            </div>

            <div class="text-center mb-3">
              <a href="/<%= data._id %>" target="_blank" class="btn btn-green btn-discover fw-semibold">
                Read more &rightarrow;
              </a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const darkModeToggle = document.getElementById("darkModeSwitch");
      if (localStorage.getItem("darkMode") === "disabled") {
        document.body.classList.add("dark-mode");
        if (darkModeToggle) darkModeToggle.checked = true;
      } else {
        document.body.classList.remove("dark-mode");
        if (darkModeToggle) darkModeToggle.checked = false;
      }
      if (darkModeToggle) {
        darkModeToggle.addEventListener("change", function () {
          document.body.classList.toggle("dark-mode");
          localStorage.setItem("darkMode", document.body.classList.contains("dark-mode") ? "enabled" : "disabled");
        });
      }
    });
  </script>

  <style>
    body {
      background-image: url("/map.jpg");
      background-position: top;
      background-repeat: repeat-y;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .btn-green {
      background: #2E7D32;
      color: white;
      max-width: fit-content;
    }
    .query-title {
      font-size: 2rem;
      font-weight: 700;
      color: #222;
    }
    .news-image {
      width: 100%;
      height: 250px;
      object-fit: cover;
      transition: transform 0.3s ease-in-out;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
    }
    .image-container:hover .news-image {
      transform: scale(1.05); 
    }
    .image-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 12px;
      background: rgba(0,0,0,0.05);
    }

    /* Make the query container fixed at the top */
.query-container.styled-query {
  position: sticky;
  top: 60px;
  z-index: 999;
  background: linear-gradient(135deg, #e8f5e9, #ffffff);
  border: 2px solid #2E7D32;
  border-radius: 0 0 16px 16px;
  padding: 15px;
  margin-bottom: 1rem;
  box-shadow: 0 6px 20px rgba(46, 125, 50, 0.15);
  transition: all 0.3s ease-in-out;
}

/* Optional: smooth animation on hover */
.query-container.styled-query:hover {
  box-shadow: 0 10px 30px rgba(46, 125, 50, 0.3);
}

/* Title underline effect */
.animated-underline {
  font-size: 1.5rem;
  font-weight: 600;
  color: #2E7D32;
  position: relative;
  display: inline-block;
}

.animated-underline::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -6px;
  width: 100%;
  height: 3px;
  background-color: #2E7D32;
  border-radius: 2px;
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease-in-out;
}

.animated-underline:hover::after {
  transform: scaleX(1);
}


    .bookmark-icon {
      font-size: 1.2rem;
      position: absolute;
      top: 12px;
      right: 12px;
      padding: 10px;
      background: white;
      border-radius: 50%;
      box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1), -4px -4px 10px rgba(255, 255, 255, 1);
      transition: all 0.3s ease;
    }
    .bookmark-icon:hover {
      background: #ff9800;
      color: white;
    }
    .btn-discover {
      padding: 12px 24px;
      border-radius: 8px;
      transition: all 0.3s ease;
      width: 70%;
    }
    .btn-discover:hover {
      transform: scale(1.05);
      box-shadow: 0 0 10px rgba(46, 125, 50, 0.5);
    }
    .news-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(8px);
      border-radius: 16px;
    }
    .news-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }
    .query-container {
      margin-top: 4rem;
    }
    @media (max-width: 768px) {
      .query-title {
        font-size: 1.5rem;
      }
      .btn-discover {
        width: 100%;
      }
    }
    body.dark-mode .news-card {
      background: rgba(45, 45, 45, 0.9);
      color: #f0f0f0;
      border: 1px solid #444;
    }
    body.dark-mode .card-text,
    body.dark-mode .card-title {
      color: #fff;
    }
    body.dark-mode .query-badge {
      background: #1976D2 !important;
    }
  </style>
</body>
